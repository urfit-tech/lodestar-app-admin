{
  "name": "lodestar-app-admin-xuemi",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "yarn upgrade lodestar-app-admin",
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "start": "PUBLIC_URL=/admin react-app-rewired start",
    "build": "PUBLIC_URL=/admin CI=false env-cmd -f .env.${NODE_ENV:-production} react-app-rewired --max-old-space-size=4096 build",
    "test": "react-scripts test",
    "typegen": "apollo client:codegen ./src/hasura.d.ts --outputFlat --target typescript",
    "format:organize-imports": "organize-imports-cli ./src/**/*.ts[x]",
    "format:prettier": "prettier --write ./src/**/*.ts*",
    "format": "npm run format:organize-imports && npm run format:prettier",
    "trans:compile": "tsc --noEmit false --outDir src/extracted",
    "trans:extract": "babel --config-file ./.intl.babelrc ./src/extracted > /dev/null",
    "trans:manage": "node manageTranslations.js",
    "trans:clean": "rm -rf ./src/extracted",
    "trans": "npm run trans:clean && npm run trans:compile && npm run trans:extract && npm run trans:manage && npm run trans:clean"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@types/chance": "^1.1.3",
    "chance": "^1.1.7",
    "lodestar-app-admin": "urfit-tech/lodestar-app-admin.git#master"
  },
  "devDependencies": {
    "@types/chance": "^1.1.3"
  },
  "devDependencies": {
    "@types/chance": "^1.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.tsx": [
      "organize-imports-cli",
      "prettier --write",
      "git add"
    ]
  }
}
